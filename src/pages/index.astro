<script is:inline>
  (() => {
    const terminal = document.getElementById('terminal-block');
    if (!terminal) return;

    const CHAR_DELAY = 20;
    const LINE_PAUSE = 400;
    const SPACER_PAUSE = 300;
    const INITIAL_DELAY = 3000;

    const lines = [
      { type: 'typed', html: '<span class="subtitle-prompt">❯</span>&nbsp;', text: 'tail -f claude-code/CHANGELOG --since="latest"' },
      { type: 'spacer' },
      { type: 'typed', html: '', text: 'Permission denied. I\'m afraid I can\'t do that, Dave.', classes: 'terminal-output terminal-error' },
      { type: 'typed', html: '<span class="terminal-connector">└</span>&nbsp;', classes: 'terminal-output', richSegments: [
        { text: 'Bash', cls: 'tool-call' },
        { text: '(' },
        { text: 'rm -rf claude-code/CHANGELOG', cls: 'tool-cmd' },
        { text: ')' }
      ]},
      { type: 'spacer' },
      { type: 'typed', html: '', classes: 'terminal-output', richSegments: [
        { text: '⠋', cls: 'spinner' },
        { text: ' ' },
        { text: 'Hallucinating...', cls: 'spinner-label' }
      ], then: 'spinner' }
    ];

    function sleep(ms) { return new Promise(r => setTimeout(r, ms)); }

    function removeCursor() {
      const c = terminal.querySelector('.terminal-cursor');
      if (c) c.remove();
    }

    function addCursor(parent) {
      const cursor = document.createElement('span');
      cursor.className = 'terminal-cursor';
      cursor.textContent = '▌';
      parent.appendChild(cursor);
    }

    async function typeText(container, text) {
      for (const ch of text) {
        removeCursor();
        container.insertAdjacentText('beforeend', ch);
        addCursor(container);
        await sleep(CHAR_DELAY);
      }
    }

    async function typeRichSegments(container, segments) {
      for (const seg of segments) {
        if (seg.cls) {
          const span = document.createElement('span');
          span.className = seg.cls;
          container.appendChild(span);
          for (const ch of seg.text) {
            removeCursor();
            span.textContent += ch;
            addCursor(container);
            await sleep(CHAR_DELAY);
          }
        } else {
          await typeText(container, seg.text);
        }
      }
    }

    async function run() {
      await sleep(INITIAL_DELAY);

      let isFirstLine = true;

      for (const line of lines) {
        removeCursor();

        if (line.type === 'spacer') {
          const spacer = document.createElement('div');
          spacer.className = 'terminal-line terminal-spacer';
          terminal.appendChild(spacer);
          await sleep(SPACER_PAUSE);
          continue;
        }

        if (isFirstLine) {
          isFirstLine = false;
          // Reuse the existing prompt line — cursor is already after ❯
          const initLine = terminal.querySelector('.terminal-line');
          addCursor(initLine);
          if (line.richSegments) {
            await typeRichSegments(initLine, line.richSegments);
          } else {
            await typeText(initLine, line.text);
          }
        } else {
          const div = document.createElement('div');
          div.className = 'terminal-line' + (line.classes ? ' ' + line.classes : '');
          if (line.html) div.insertAdjacentHTML('beforeend', line.html);
          terminal.appendChild(div);
          addCursor(div);

          if (line.richSegments) {
            await typeRichSegments(div, line.richSegments);
          } else {
            await typeText(div, line.text);
          }
        }

        removeCursor();

        if (line.then === 'spinner') {
          const sp = terminal.querySelector('.spinner');
          if (sp) {
            const frames = ['⠋','⠙','⠹','⠸','⠼','⠴','⠦','⠧','⠇','⠏'];
            let i = 0;
            setInterval(() => { i = (i + 1) % frames.length; sp.textContent = frames[i]; }, 80);
          }
        }

        await sleep(LINE_PAUSE);
      }
    }

    run();
  })();
</script>
