---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import ReleaseCard from "../components/ReleaseCard.astro";
import { fetchReleases } from "../lib/github";
import type { Category } from "../lib/types";

const releases = await fetchReleases();

const categoryMeta: { label: string; value: Category }[] = [
  { label: "Features", value: "feature" },
  { label: "Bug Fixes", value: "bug-fix" },
  { label: "Performance", value: "performance" },
  { label: "Security", value: "security" },
  { label: "Misc", value: "improvement" },
];

const categoryCounts = categoryMeta.map((cat) => ({
  ...cat,
  count: releases.filter((r) => r.items.some((item) => item.category === cat.value)).length,
}));

const latestVersion = releases.length > 0 ? releases[0].version : "N/A";
const now = new Date();
const thisMonthCount = releases.filter((r) => {
  const d = new Date(r.date);
  return d.getFullYear() === now.getFullYear() && d.getMonth() === now.getMonth();
}).length;
const buildTimestamp = Date.now();
---
<Layout title="Claude Code Release Notes">
  <Sidebar
    categories={categoryCounts}
    totalReleases={releases.length}
    thisMonthCount={thisMonthCount}
    latestVersion={latestVersion}
  />

  <main class="content">
    <header class="content-header">
      <div class="header-text">
        <h1 class="page-title"><span class="title-text">Monitor the changelog, HAL.</span><span class="crt-sweep"></span></h1>
        <div class="terminal-block">
          <div class="terminal-line"><span class="subtitle-prompt">❯</span>&nbsp;tail -f claude-code/CHANGELOG --since="latest"</div>
          <div class="terminal-line terminal-output"><span class="spinner">⠋</span> <span class="spinner-label">Hallucinating...</span></div>
        </div>
      </div>
      <div class="search-wrapper">
        <span class="material-symbols-sharp search-icon">search</span>
        <input
          type="text"
          id="search-input"
          class="search-input"
          placeholder="Search releases..."
          autocomplete="off"
        />
      </div>
    </header>

    <div id="release-list" class="release-list">
      {releases.map((release, i) => (
        <div class="release-wrapper" data-index={i}>
          <ReleaseCard release={release} />
        </div>
      ))}
    </div>

    <div id="load-more-container" class="load-more-container">
      <button id="load-more-btn" class="load-more-btn">Load more</button>
    </div>
  </main>

  <div id="toast" class="toast" hidden>
    <span>New releases available</span>
    <a href="/" class="toast-refresh">Refresh</a>
    <button id="toast-dismiss" class="toast-dismiss" aria-label="Dismiss">
      <span class="material-symbols-sharp">close</span>
    </button>
  </div>
</Layout>

<script is:inline define:vars={{ buildTimestamp }}>
  window.__BUILD_TIMESTAMP__ = buildTimestamp;
</script>

<style>
  .content {
    margin-left: var(--sidebar-width);
    padding: 32px 40px;
    position: relative;
  }

  .content::before {
    content: "";
    position: fixed;
    top: 0;
    left: var(--sidebar-width);
    right: 0;
    bottom: 0;
    background: url("/images/bg-chornobyl.jpg") top center/contain no-repeat;
    opacity: 0.08;
    pointer-events: none;
    z-index: 0;
    filter: sepia(1) hue-rotate(80deg) saturate(0.8) brightness(0.9);
  }

  .content::after {
    content: "";
    position: fixed;
    top: 0;
    left: var(--sidebar-width);
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    opacity: 0.06;
    pointer-events: none;
    z-index: 0;
  }

  .content > * {
    position: relative;
    z-index: 1;
  }

  .content-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 24px;
    margin-bottom: 32px;
  }

  .page-title::before {
    content: "";
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.15) 2px,
      rgba(0, 0, 0, 0.15) 4px
    );
    pointer-events: none;
    z-index: 1;
  }

  .page-title::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      rgba(65, 217, 31, 0.03) 50%,
      rgba(0, 0, 0, 0.1) 50%
    );
    background-size: 100% 4px;
    pointer-events: none;
    z-index: 1;
    animation: crt-flicker 4s infinite;
  }

  .crt-sweep {
    position: absolute;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(65, 217, 31, 0.15),
      rgba(65, 217, 31, 0.3),
      rgba(65, 217, 31, 0.15),
      transparent
    );
    z-index: 2;
    pointer-events: none;
    animation: crt-sweep 4s ease-in-out infinite;
    opacity: 0;
  }

  @keyframes crt-sweep {
    0% { top: -6px; opacity: 0; }
    2% { opacity: 1; }
    25% { top: 100%; opacity: 1; }
    28% { opacity: 0; }
    100% { top: 100%; opacity: 0; }
  }

  .title-text {
    position: relative;
    z-index: 1;
  }

  @keyframes crt-flicker {
    0%, 100% { opacity: 0.8; }
    5% { opacity: 0.6; }
    10% { opacity: 0.85; }
    50% { opacity: 0.75; }
    52% { opacity: 0.9; }
    55% { opacity: 0.7; }
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: 28px;
    font-weight: 700;
    color: var(--color-accent);
    position: relative;
    overflow: hidden;
    display: inline-block;
    padding: 0 20px;
    margin: 0 -20px;
    -webkit-mask-image: linear-gradient(to right, transparent, black 20px, black calc(100% - 20px), transparent);
    mask-image: linear-gradient(to right, transparent, black 20px, black calc(100% - 20px), transparent);
    text-shadow:
      0 0 8px rgba(65, 217, 31, 0.6),
      0 0 20px rgba(65, 217, 31, 0.3),
      0 0 40px rgba(65, 217, 31, 0.1);
    animation: text-flicker 6s infinite, glitch 8s infinite;
  }

  @keyframes text-flicker {
    0%, 100% { opacity: 1; }
    75% { opacity: 1; }
    76% { opacity: 0.4; }
    77% { opacity: 1; }
    78% { opacity: 0.6; }
    79% { opacity: 1; }
    92% { opacity: 1; }
    93% { opacity: 0.3; }
    93.5% { opacity: 0.9; }
    94% { opacity: 0.5; }
    94.5% { opacity: 1; }
    96% { opacity: 0.7; }
    96.5% { opacity: 1; }
  }

  .terminal-block {
    font-family: 'Fira Code', monospace;
    font-size: 13px;
    color: var(--color-text-muted);
    margin-top: 8px;
    padding: 10px 14px;
    background: #0d0d0d;
    border: 1px solid #333;
    border-radius: 6px;
    width: fit-content;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .terminal-line {
    white-space: nowrap;
  }

  .subtitle-prompt {
    color: var(--color-accent);
    margin-right: 1px;
    font-weight: 600;
  }

  .spinner {
    font-size: 16px;
    color: var(--color-accent);
    text-shadow: 0 0 8px rgba(65, 217, 31, 0.6), 0 0 16px rgba(65, 217, 31, 0.3);
    animation: spinner-glow 2s ease-in-out infinite;
  }

  .spinner-label {
    font-family: 'Fira Code', monospace;
    font-size: 13px;
    color: var(--color-accent);
    text-shadow: 0 0 6px rgba(65, 217, 31, 0.3);
    animation: spinner-glow 3s ease-in-out infinite;
  }

  @keyframes spinner-glow {
    0%, 100% { opacity: 0.6; text-shadow: 0 0 6px rgba(65, 217, 31, 0.3); }
    50% { opacity: 1; text-shadow: 0 0 8px rgba(65, 217, 31, 0.5); }
  }

  @keyframes glitch {
    0%, 100% {
      text-shadow: none;
      transform: none;
    }
    80% {
      text-shadow: none;
      transform: none;
    }
    81% {
      text-shadow:
        4px 0 rgba(65, 217, 31, 0.8),
        -4px 0 rgba(6, 182, 212, 0.8);
      transform: translate(-3px, 0);
    }
    82% {
      text-shadow:
        -4px 0 rgba(65, 217, 31, 0.8),
        4px 0 rgba(6, 182, 212, 0.8);
      transform: translate(3px, 0);
    }
    82.5% {
      text-shadow:
        3px 0 rgba(65, 217, 31, 0.7),
        -3px 0 rgba(6, 182, 212, 0.7);
      transform: translate(-2px, 0);
    }
    83% {
      text-shadow: none;
      transform: none;
    }
    90% {
      text-shadow: none;
      transform: none;
    }
    91% {
      text-shadow:
        3px 0 rgba(65, 217, 31, 0.7),
        -3px 0 rgba(239, 68, 68, 0.7);
      transform: translate(3px, 0);
    }
    91.5% {
      text-shadow:
        -3px 0 rgba(65, 217, 31, 0.7),
        3px 0 rgba(239, 68, 68, 0.7);
      transform: translate(-2px, 0);
    }
    92% {
      text-shadow: none;
      transform: none;
    }
  }

  .search-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  .search-icon {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 20px;
    color: var(--color-text-muted);
  }

  .search-input {
    padding: 10px 16px 10px 40px;
    width: 260px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-surface);
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 14px;
    outline: none;
    transition: border-color 0.15s;
  }

  .search-input:focus {
    border-color: var(--color-accent);
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .release-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .load-more-container {
    margin-top: 24px;
    text-align: center;
  }

  .load-more-btn {
    padding: 12px 32px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-surface);
    color: var(--color-text);
    font-family: var(--font-body);
    font-size: 14px;
    cursor: pointer;
    transition: background 0.15s, border-color 0.15s;
  }

  .load-more-btn:hover {
    background: var(--color-surface-hover);
    border-color: var(--color-text-muted);
  }

  .toast {
    position: fixed;
    bottom: 24px;
    right: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    font-size: 14px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    z-index: 100;
  }

  .toast[hidden] {
    display: none;
  }

  .toast-refresh {
    color: var(--color-accent);
    font-weight: 600;
  }

  .toast-dismiss {
    border: none;
    background: transparent;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 0;
    display: flex;
  }
</style>

<script is:inline>
  (() => {
    const frames = ['⠋','⠙','⠹','⠸','⠼','⠴','⠦','⠧','⠇','⠏'];
    const el = document.querySelector('.spinner');
    if (!el) return;
    let i = 0;
    setInterval(() => { i = (i + 1) % frames.length; el.textContent = frames[i]; }, 140);
  })();
</script>
<script src="../scripts/app.ts"></script>
<script src="../scripts/toast.ts"></script>
