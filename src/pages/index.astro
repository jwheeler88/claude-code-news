---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import ReleaseCard from "../components/ReleaseCard.astro";
import MobileNav from "../components/MobileNav.astro";
import { fetchReleases } from "../lib/github";
import type { Category } from "../lib/types";

const releases = await fetchReleases();

const categoryMeta: { label: string; value: Category }[] = [
  { label: "Features", value: "feature" },
  { label: "Bug Fixes", value: "bug-fix" },
  { label: "Performance", value: "performance" },
  { label: "Security", value: "security" },
  { label: "Improvements", value: "improvement" },
  { label: "Misc", value: "misc" },
];

const categoryCounts = categoryMeta.map((cat) => ({
  ...cat,
  count: releases.filter((r) => r.items.some((item) => item.category === cat.value)).length,
}));

const latestVersion = releases.length > 0 ? releases[0].version : "N/A";
const now = new Date();
const thisMonthCount = releases.filter((r) => {
  const d = new Date(r.date);
  return d.getFullYear() === now.getFullYear() && d.getMonth() === now.getMonth();
}).length;
const loadedVersion = latestVersion;
---
<Layout title="Claude Code Release Notes">
  <Sidebar
    categories={categoryCounts}
    totalReleases={releases.length}
    thisMonthCount={thisMonthCount}
    latestVersion={latestVersion}
  />

  <main class="content">
    <div class="sticky-header">
    <header class="content-header">
      <div class="header-text">
        <div class="title-row">
          <img src="/images/hal-eye.png" alt="HAL 9000" class="title-icon-img" />
          <h1 class="page-title"><span class="title-text"><span class="title-desktop">I'm sorry, Dave. I can't let you read that changelog.</span><span class="title-mobile">Claude Code</span></span><span class="crt-sweep"></span></h1>
        </div>
        <div class="terminal-block" id="terminal-block">
          <div class="terminal-line"><span class="subtitle-prompt">❯</span>&nbsp;<span class="terminal-cursor">▌</span></div>
        </div>
      </div>
      <button class="search-toggle" id="search-toggle" aria-label="Search">
        <span class="material-symbols-sharp">search</span>
      </button>
      <div class="search-wrapper">
        <span class="material-symbols-sharp search-icon">search</span>
        <input
          type="text"
          id="search-input"
          class="search-input"
          placeholder="Search releases..."
          autocomplete="off"
        />
        <kbd class="search-kbd" id="search-kbd"></kbd>
        <button class="mobile-search-close" id="mobile-search-close" aria-label="Close search">
          <span class="material-symbols-sharp">close</span>
        </button>
      </div>
    </header>
    <MobileNav
      categories={categoryCounts}
      totalReleases={releases.length}
      thisMonthCount={thisMonthCount}
    />
    </div>

    <div id="release-list" class="release-list">
      {releases.map((release, i) => (
        <div class="release-wrapper" data-index={i}>
          <ReleaseCard release={release} />
        </div>
      ))}
    </div>

    <div id="load-more-container" class="load-more-container">
      <button id="load-more-btn" class="load-more-btn">Load more</button>
    </div>
  </main>

  <div id="toast" class="toast" hidden>
    <span>New releases available</span>
    <a href="/" class="toast-refresh">Refresh</a>
    <button id="toast-dismiss" class="toast-dismiss" aria-label="Dismiss">
      <span class="material-symbols-sharp">close</span>
    </button>
  </div>
</Layout>

<script is:inline define:vars={{ loadedVersion }}>
  window.__LOADED_VERSION__ = loadedVersion;
</script>

